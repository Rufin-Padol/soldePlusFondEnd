name: Deploy Angular App to VPS

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    timeout-minutes: 15

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci --no-audit --prefer-offline

      - name: Build Angular app
        run: npm run build -- --configuration=production
        env:
          NODE_OPTIONS: '--max_old_space_size=4096'

      - name: Verify build artifacts
        run: |
          ls -la ./dist/
          [ -f ./dist/index.html ] || exit 1

      - name: Setup SSH
        uses: webfactory/ssh-agent@v0.8.0
        with:
          ssh-private-key: ${{ secrets.VPS_SSH_KEY }}

      - name: Clean and Deploy
        run: |
          # Nettoyage du dossier distant et vérification
          ssh -o StrictHostKeyChecking=no root@${{ secrets.VPS_IP }} \
            "rm -rf /var/www/angular-app/* && ls -la /var/www/angular-app/"
          
          # Transfert des fichiers avec feedback visuel
          rsync -avz --progress --no-perms --no-owner --no-group --delete \
            -e "ssh -o StrictHostKeyChecking=no" \
            ./dist/ \
            root@${{ secrets.VPS_IP }}:/var/www/angular-app/

          # Vérification finale
          ssh -o StrictHostKeyChecking=no root@${{ secrets.VPS_IP }} \
            "ls -la /var/www/angular-app/ && du -sh /var/www/angular-app/*"

      - name: Restart Nginx
        run: |
          ssh -o StrictHostKeyChecking=no root@${{ secrets.VPS_IP }} \
            "sudo systemctl restart nginx && systemctl status nginx --no-pager"

      - name: Verify deployment
        run: |
          curl -sSf http://${{ secrets.VPS_IP }} > /dev/null || \
            (echo "Deployment verification failed!" && exit 1)
