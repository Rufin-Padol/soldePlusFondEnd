name: Deploy Angular App to VPS

on:
  push:
    branches:
      - main  # ou ta branche principale

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '19'

      - name: Install dependencies
        run: npm ci

      - name: Build Angular app
        run: npm run build -- --prod

      - name: Setup SSH agent
        uses: webfactory/ssh-agent@v0.5.4
        with:
          ssh-private-key: ${{ secrets.VPS_PRIVATE_KEY }}

      - name: Copy build files to VPS
        run: |
          rsync -avz --delete ./dist/ root@${{ secrets.VPS_IP }}:/var/www/angular-app/

      - name: Restart Nginx on VPS
        run: |
          ssh -o StrictHostKeyChecking=no root@${{ secrets.VPS_IP }} "sudo systemctl restart nginx"
